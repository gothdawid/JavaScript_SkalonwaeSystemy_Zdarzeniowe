generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGODB_URI")
}

model Author {
    id        String @id @default(auto()) @map("_id") @db.ObjectId
    firstName String
    lastName  String
    age       Int
    books     Book[]
}

model Book {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    title    String
    year     Int
    author   Author @relation(fields: [authorId], references: [id])
    authorId String @db.ObjectId
}


